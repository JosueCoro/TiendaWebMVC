
@{
    ViewBag.Title = "Tiendas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Resumen</a></li>
    <li class="breadcrumb-item active">Tiendas</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-store"></i> Lista de Tiendas
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModalTienda(null)">Crear Nuevo</button>
            </div>
        </div>

        <hr />

        <table id="tablatienda" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Teléfono</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="FormModalTienda" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Tiendas</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">

                <input id="txtidtienda" type="text" value="0" />

                <div class="row g-1">

                    <div class="col-sm-6">
                        <label for="txtNombreTienda" class="form-label">Nombre de la Tienda</label>
                        <input type="text" class="form-control" id="txtNombreTienda" placeholder="Nombre de la Tienda" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtDireccionTienda" class="form-label">Dirección</label>
                        <input type="text" class="form-control" id="txtDireccionTienda" placeholder="Dirección de la Tienda" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="txtTelefonoTienda" class="form-label">Teléfono</label>
                        <input type="text" class="form-control" id="txtTelefonoTienda" placeholder="Teléfono de la Tienda" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="cdactivoTienda" class="form-label">Estado</label>
                        <select class="form-select" id="cdactivoTienda">
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>

                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeErrorTienda" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" onclick="GuardarTienda()">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var tabladataTienda;
        var filaSeleccionadaTienda;


        tabladataTienda = $('#tablatienda').DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                "url": '@Url.Action("ListarTiendas", "Mantenedor")', 
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "nombre" },
                { "data": "dirrecion" },
                { "data": "telefono" },
                {
                    "data": "estado",
                    "render": function (valor) {
                        if (valor) {
                            return '<span class="badge bg-success">Activo</span>';
                        } else {
                            return '<span class="badge bg-danger">Inactivo</span>';
                        }
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-warning btn-sm btn-editar">Editar</button> <button type="button" class="btn btn-danger btn-eliminar">Eliminar</button>',
                    "oderrable": false,
                    "searchable": false,
                    "width": "180px"
                }

            ],
            "language": {
                "url": '//cdn.datatables.net/plug-ins/2.2.1/i18n/es-ES.json',
            },
        });

        function abrirModalTienda(json) {

            $("#txtidtienda").val(0);
            $("#txtNombreTienda").val("");
            $("#txtDireccionTienda").val("");
            $("#txtTelefonoTienda").val("");
            $("#cdactivoTienda").val(1);
            $("#mensajeErrorTienda").hide();

            if (json != null) {
                $("#txtidtienda").val(json.id_tienda);
                $("#txtNombreTienda").val(json.nombre);
                $("#txtDireccionTienda").val(json.dirrecion);
                 $("#txtTelefonoTienda").val(json.telefono);
                $("#cdactivoTienda").val(json.estado == true ? 1 : 0);
            }

            $('#FormModalTienda').modal('show');
        }

        $("#tablatienda tbody").on("click", '.btn-editar', function () {

            filaSeleccionadaTienda = $(this).closest("tr");
            var data = tabladataTienda.row(filaSeleccionadaTienda).data();
            abrirModalTienda(data);
        });

        $("#tablatienda tbody").on("click", '.btn-eliminar', function () {

            var tiendaSeleccionada = $(this).closest("tr");
            var data = tabladataTienda.row(tiendaSeleccionada).data();

            swal({
                title: "¿Estás seguro?",
                text: "¿Desea eliminar la Tienda?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Si, Eliminar",
                cancelButtonText: "No, Cancelar",
                closeOnConfirm: true,
            },
                function () {
                    $.ajax({
                        url: '@Url.Action("EliminarTienda", "Mantenedor")', 
                        type: 'POST',
                        data: JSON.stringify({ id: data.id_tienda }),
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {

                            if (data.resultado) {
                                ActualizarTablaTienda();
                                tabladataTienda.row(tiendaSeleccionada).remove().draw();
                            } else {
                                alert(data.mensaje);
                            }
                        },
                        error: function (error) {
                            console.log(error)
                        }
                    });
                });
        });

        function GuardarTienda() {

            var Tienda = {
                id_tienda: $("#txtidtienda").val(),
                nombre: $("#txtNombreTienda").val(),
                dirrecion: $("#txtDireccionTienda").val(),
                telefono: $("#txtTelefonoTienda").val(),
                estado: $("#cdactivoTienda").val() == 1 ? true : false,
            }

            jQuery.ajax({
                url: '@Url.Action("GuardarTienda", "Mantenedor")', 
                type: 'POST',
                data: JSON.stringify({ objeto: Tienda }),
                datatype: 'json',
                contentType: 'application/json; charset=utf-8',
                success: function (data) {

                    $(".modal-body").LoadingOverlay("hide");

                    if (Tienda.id_tienda == 0) { 
                        if (data.resultado != 0) {
                            Tienda.id_tienda = data.resultado;
                            tabladataTienda.row.add(Tienda).draw(false);
                            $('#FormModalTienda').modal("hide");
                            ActualizarTablaTienda();
                        } else {
                            $("#mensajeErrorTienda").text(data.mensaje);
                            $("#mensajeErrorTienda").show();
                        }
                    }
                    else { // Editar
                        if (data.resultado) {
                            tabladataTienda.row(filaSeleccionadaTienda).data(Tienda).draw(false);
                            filaSeleccionadaTienda = null;
                            $('#FormModalTienda').modal("hide");
                            ActualizarTablaTienda();
                        } else {
                            $("#mensajeErrorTienda").text(data.mensaje);
                            $("#mensajeErrorTienda").show();
                        }
                    }
                },
                error: function (error) {
                    $(".modal-body").LoadingOverlay("hide");
                    $('#mensajeErrorTienda').text("Error Ajax");
                    $('#mensajeErrorTienda').show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 24
                    })
                }
            });
        }
        function ActualizarTablaTienda() {
            tabladataTienda.ajax.reload(null, false);
        }
    </script>
}


