
@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Resumen</a></li>
    <li class="breadcrumb-item active">Productos</li>
</ol>

<div class="card">
    <div class="card-header">

        <i class="fas fa-boxes"></i> Lista de Producto
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>

        <hr />

        <table id="tablausuario" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Cantidad</th>
                    <th>Sucursal</th>
                    <th>Unidad de Medida</th>
                    <th>Categoria</th>
                    <th>Marca</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="FormModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">

                <!-- <input id ="txtid" type="hidden" name="name" value="0" /> -->
                <input id="txtid" type="text" name="name" value="0" />
                <input id="txtidum" type="text" name="name" value="0" />
                <input id="txtidcategoria" type="text" name="name" value="0" />
                <input id="txtidmarca" type="text" name="name" value="0" />

                <form id="contenedor" class="row">
                    <div class="col-sm-3">
                        <div class="mb-2">
                            <img id="img_producto" height="197" width="200" class="border rounded mx-auto d-block img-fluid" />
                        </div>
                        <div class="mb-2">
                            <input type="file" class="form-control" id="fileproducto" accept="image/png, image/jpg, image/jpeg" onchange="mostrarImagen(this)" />

                        </div>
                    </div>

                    <div class="col-sm-3">
                        <div class="mb-3">
                            <label class="form-label">Nombre del Producto</label>
                            <input type="text" class="form-control" id="txtnombre" name="nombre" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Descripcion</label>
                            <textarea type="text" class="form-control" id="txtdescripcion" name="descripcion" style="height:125px;resize:none"> </textarea>

                        </div>
                    </div>


                    <div class="col-sm-3">

                        <div class="mb-3">
                            <label class="form-label">Unidad De Medida</label>
                            <select id="cboum" class="form-select">
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Categoria</label>
                            <select id="cbocategoria" class="form-select">
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Marca</label>
                            <select id="cbomarca" class="form-select">
                            </select>
                        </div>

                    </div>

                    <div class="col-sm-3">

                        <div class="mb-3">
                            <label class="form-label">Precio</label>
                            <input type="text" class="form-control" id="txtprecio" name="precio" autocomplete="off" />
                        </div>

                        <div class="col-sm-6">
                            <label for="cdactivo" class="form-label">Estado</label>
                            <select class="form-select" aria-label="Default select example" id="cdactivo">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                        </div>
                    </div>

                </form>



                <div class="row mt-2">
                    <div class="col-12">

                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        var tabladata;
        var filaSeleccionada;

        function mostrarImagen(input) {
            if (input.files) {

                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#img_producto').attr('src', e.target.result).width(200).height(197)
                }

                reader.readAsDataURL(input.files[0]);
            }
        }


        //lista de unidad de medida
        jQuery.ajax({
            url: '@Url.Action("ListarUnidadMedida", "Mantenedor")',
            type: 'GET',
            data: null,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {

                console.log(data);

                $.each(data.data, function (index, valor) {
                    $("<option>").attr("value", valor.id_unidad_medida).text(valor.descripcion).appendTo("#cboum");

                })

            },
            error: function (error) {
                console.log(error);
            }
        });
        //lista de categoria
        jQuery.ajax({
            url: '@Url.Action("ListarCategorias", "Mantenedor")',
            type: 'GET',
            data: null,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                console.log(data);
                $.each(data.data, function (index, valor) {
                    $("<option>").attr("value", valor.id_categoria).text(valor.descripcion).appendTo("#cbocategoria");
                })
            },
            error: function (error) {
                console.log(error);
            }
        });
        //lista de marca
        jQuery.ajax({
            url: '@Url.Action("ListarMarcas", "Mantenedor")',
            type: 'GET',
            data: null,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                console.log(data);
                $.each(data.data, function (index, valor) {
                    $("<option>").attr("value", valor.id_marca).text(valor.descripcion).appendTo("#cbomarca");
                })
            },
            error: function (error) {
                console.log(error);
            }
        });



        tabladata = $('#tablausuario').DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                "url": '@Url.Action("ListarProductos", "Mantenedor")',
                "type": "GET",
                "datatype": "json",
                /*success: function (data) {
                    console.log(data);
                }*/
            },

            "columns": [
                { "data": "nombre" },
                { "data": "descripcion" },
                {
                    "data": "oStock",
                    "render": function (data) {
                        return data && data.cantidad != null ? data.cantidad : 0;
                    }
                },
                {
                    "data": "oTienda",
                    "render": function (data) {
                        return data && data.nombre != null ? data.nombre : "No asignada";
                    }
                },
                {
                    "data": "oUnidadMedida",
                    "render": function (data) {
                        return data.descripcion;
                    }
                },
                {
                    "data": "oCategoria",
                    "render": function (data) {
                        return data.descripcion;
                    }
                },
                {
                    "data": "oMarca",
                    "render": function (data) {
                        return data.descripcion;
                    }
                },
                {
                    "data": "precio",
                    "render": function (data) {
                        return data.toLocaleString('es-CL', { style: 'currency', currency: 'CLP' });
                    }
                },
                {
                    "data": "estado",
                    "render": function (valor) {
                        if (valor) {
                            return '<span class="badge bg-success">Activo</span>';
                        } else {
                            return '<span class="badge bg-danger">Inactivo</span>';
                        }
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-warning btn-sm btn-editar">Editar</button> <button type="button" class="btn btn-danger btn-eliminar">Eliminar</button>',
                    "oderrable": false,
                    "searchable": false,
                    "width": "180px"


                }

            ],
            "language": {
                "url": '//cdn.datatables.net/plug-ins/2.2.1/i18n/es-ES.json',
            },
        });




        function abrirModal(json) {

            $("#txtid").val(0);
            $("#txtidum").val(0);
            $("#txtidcategoria").val(0);
            $("#txtidmarca").val(0);


            $("#img_producto").removeAttr("src");
            $("#fileproducto").val("");
            $("#txtnombre").val("");
            $("#txtdescripcion").val("");

            $("#cboum").val(1);
            $("#cbocategoria").val(1);
            $("#cbomarca").val(1);

            $("#txtprecio").val("");
            $("#cdactivo").val(1);

            $("#mensajeError").hide();



            if (json != null) {

                $("#txtid").val(json.id_producto);

                $("#txtidum").val(json.oUnidadMedida.id_unidad_medida);
                $("#txtidcategoria").val(json.oCategoria.id_categoria);
                $("#txtidmarca").val(json.oMarca.id_marca);


                $("#txtnombre").val(json.nombre);
                $("#txtdescripcion").val(json.descripcion);

                $("#cboum").val(json.oUnidadMedida.id_unidad_medida);
                $("#cbocategoria").val(json.oCategoria.id_categoria);
                $("#cbomarca").val(json.oMarca.id_marca);

                $("#txtprecio").val(json.precio);
                $("#cdactivo").val(json.estado == true ? 1 : 0);
                // mostrar la imagen de un producto ya registrado con la funcion de ImagenProducto 
                jQuery.ajax({
                    url: '@Url.Action("ImagenProducto", "Mantenedor")',
                    type: 'POST',
                    data: JSON.stringify({ id: json.id_producto }),
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {

                        $("#img_producto").LoadingOverlay("hide");
                        console.log(data);
                        if (data.conversion) {
                            //$("#img_producto").attr({ "src": "data:image/" + data.Extension + ";base64" + data.textoBase64 });
                            $("#img_producto").attr({ "src": "data:image/" + data.Extension + ";base64," + data.textoBase64 });
                        } 
                    },
                    error: function (error) {
                        console.log(error);
                        $("#img_producto").LoadingOverlay("show");

                        $("#mensajeError").show();
                        $("#mensajeError").text("Error al cargar la imagen");
                    },
                    beforeSend: function () {
                        $("#img_producto").LoadingOverlay("show");

                    }

                    
                });



            }

            $('#FormModal1').modal('show');
        }




        $("#tablausuario tbody").on("click", '.btn-editar', function () {

            filaSeleccionada = $(this).closest("tr");

            var data = tabladata.row(filaSeleccionada).data();

            console.log(data)

            abrirModal(data)


        })

        $("#tablausuario tbody").on("click", '.btn-eliminar', function () {

            var usuarioSeleccionado = $(this).closest("tr");

            var data = tabladata.row(usuarioSeleccionado).data();

            swal({
                title: "¿Estás seguro?",
                text: "¿Desea eliminar el Producto?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Si, Eliminar",
                cancelButtonText: "No, Cancelar",
                closeOnConfirm: true,
            },
            function ()
            {
                $.ajax({
                    url: '@Url.Action("EliminarProducto", "Mantenedor")',
                    type: 'POST',
                    data: JSON.stringify({ id: data.id_producto }),
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {

                        if (data.resultado) {
                            ActualizarTabla();

                            //tabladata.row(usuarioSeleccionado).remove().draw();
                        } else {
                            swal("No se pudo eliminar", data.mensaje, "error");
                        }
                    },
                    error: function (error) {
                        console.log(error)
                    }
                });
            });



            console.log(data);



        })

        function Guardar()
        {
            var imagenSeleccionada = $("#fileproducto")[0].files[0];

            var valorPrecio = $("#txtprecio").val().replace(",", ".");
            if (isNaN(valorPrecio) || valorPrecio.trim() === "") {
                $("#mensajeError").text("El precio debe ser un número válido.");
                $("#mensajeError").show();
                return;
            }
            var Producto = {
                id_producto: $("#txtid").val(),
                nombre: $("#txtnombre").val(),
                descripcion: $("#txtdescripcion").val(),


                UNIDAD_MEDIDA_id_unidad_medida: $("#cboum").val(),
                CATEGORIA_id_categoria: $("#cbocategoria").val(),
                MARCA_id_marca: $("#cbomarca").val(),


                precio: Number(valorPrecio),
                estado: $("#cdactivo").val() == 1 ? true : false,
            }

            var request = new FormData();
            request.append("objeto", JSON.stringify(Producto));
            request.append("archivoImagen", imagenSeleccionada);

            jQuery.ajax({
                url: '@Url.Action("GuardarProducto", "Mantenedor")',
                type: 'POST',
                data: request,
                processData: false,
                contentType: false,
                success: function (data) {
                    console.log(data);

                    $(".modal-body").LoadingOverlay("hide");

                    //PRODUCTO NUEVO
                    if (Producto.id_producto == 0) {

                        if (data.idgenerado != 0) {
                            console.log(data.idgenerado);
                            console.log(JSON.stringify(Producto));

                            Producto.id_producto = data.idgenerado;
                            //tabladata.row.add(Producto).draw(false);

                            ActualizarTabla();
                            //cerrar modal
                            $('#FormModal1').modal("hide");
                            $('#FormModal1').modal("hide");


                        } else {
                            //alert(data.mensaje)
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                    //PRODUCTO editar
                    else {

                        if (data.operacionExitosa) {
                            //tabladata.row(filaSeleccionada).data(Producto).draw(false);
                            //no quiero que  me muestra el "Producto actualizado exitosamente." en el #mensajeError. corrigamos eso
                            


                            filaSeleccionada = null;
                            ActualizarTabla();

                            $('#FormModal1').modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {
                    console.log(error);
                    $(".modal-body").LoadingOverlay("hide");
                    $('#mensajeError').text("Error Ajax");
                    $('#mensajeError').show();
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imageResizeFactor: 2,
                        text: "Cargando...",
                        size: 24
                    })
                }
            });
        }
        //funcion que actualiza el datatable
        function ActualizarTabla() {
            tabladata.ajax.reload(null, false);
        }




    </script>
}









