@{
    ViewBag.Title = "Reporte de Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Encabezado -->
<h1 class="mt-4">Reporte de Ventas</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Reporte de Ventas</li>
</ol>

<!-- Gráficos -->
<div class="row mt-4 animate__animated animate__fadeIn">
    <div class="col-xl-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header text-primary">
                <i class="fa-solid fa-chart-line me-2"></i> Tendencia de Ventas (Semanal)
            </div>
            <div class="card-body">
                <canvas id="salesTrendChart" width="100%" height="40"></canvas>
            </div>
        </div>
    </div>

    <div class="col-xl-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header text-primary">
                <i class="fa-solid fa-box-open me-2"></i> Top 5 Productos/Servicios Más Vendidos
            </div>
            <div class="card-body">
                <canvas id="topItemsChart" width="100%" height="40"></canvas>
            </div>
        </div>
    </div>
</div>

<div class="row animate__animated animate__fadeIn">
    <div class="col-xl-6">
        <div class="card shadow-sm mb-4">
            <div class="card-header text-primary">
                <i class="fa-solid fa-user-group me-2"></i> Top 5 Clientes por Volumen de Compra
            </div>
            <div class="card-body">
                <canvas id="topClientsChart" width="100%" height="40"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Filtros y Tabla -->
<div class="card shadow-sm animate__animated animate__fadeIn mb-4">
    <div class="card-header text-primary">
        <i class="fa-solid fa-clock-rotate-left me-2"></i> Historial de Ventas
    </div>
    <div class="card-body">
        <form>
            <div class="row align-items-end">
                <div class="col-sm-2 mb-2">
                    <label class="form-label">Fecha de Inicio:</label>
                    <input class="form-control" type="date" id="txtfechainicio" name="fechainicio" />
                </div>

                <div class="col-sm-2 mb-2">
                    <label class="form-label">Fecha Fin:</label>
                    <input class="form-control" type="date" id="txtfechafin" name="fechafin" />
                </div>

                <div class="col-sm-2 mb-2">
                    <label class="form-label">Id Venta:</label>
                    <input class="form-control" type="text" id="txtidtransaccion" name="idtransaccion" />
                </div>

                <div class="col-sm-2 mb-2">
                    <button class="btn btn-outline-primary w-100" id="btnbuscar" type="button">
                        <i class="fa-solid fa-magnifying-glass me-1"></i> Buscar
                    </button>
                </div>

                <div class="col-sm-2 mb-2">
                    <button class="btn btn-outline-success w-100" type="submit">
                        <i class="fa-solid fa-file-export me-1"></i> Exportar
                    </button>
                </div>
            </div>
        </form>

        <hr />
        <div class="table-responsive">
            <table id="tabla" class="table table-striped table-bordered nowrap" style="width:100%">
                <thead class="table-primary">
                    <tr>
                        <th>Fecha Venta</th>
                        <th>Cliente</th>
                        <th>Producto/Servicio</th>
                        <th>Tipo Ítem</th>
                        <th>Precio Unitario</th>
                        <th>Cantidad</th>
                        <th>Subtotal</th>
                        <th>ID Venta</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Datos dinámicos -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- Librerías -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@2.0.0"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.1/js/dataTables.responsive.min.js"></script>

    <!-- Inicialización de Gráficos y Tabla -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // Chart: Tendencia de Ventas
            new Chart(document.getElementById('salesTrendChart'), {
                type: 'line',
                data: {
                    labels: ['Lun', 'Mar', 'Mié', 'Jue', 'Vie', 'Sáb', 'Dom'],
                    datasets: [{
                        label: 'Ventas',
                        data: [120, 150, 180, 100, 220, 160, 130],
                        borderColor: '#0d6efd',
                        backgroundColor: 'rgba(13,110,253,0.2)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    plugins: {
                        datalabels: { display: false },
                        legend: { labels: { color: '#000' } }
                    },
                    scales: {
                        x: { ticks: { color: '#6c757d' } },
                        y: { ticks: { color: '#6c757d' } }
                    }
                },
                plugins: [ChartDataLabels]
            });

            // Chart: Top Productos
            new Chart(document.getElementById('topItemsChart'), {
                type: 'bar',
                data: {
                    labels: ['Producto A', 'Producto B', 'Producto C', 'Producto D', 'Producto E'],
                    datasets: [{
                        label: 'Ventas',
                        data: [40, 35, 30, 25, 20],
                        backgroundColor: '#198754'
                    }]
                },
                options: {
                    plugins: {
                        datalabels: { anchor: 'end', align: 'top' },
                        legend: { display: false }
                    },
                    scales: {
                        x: { ticks: { color: '#6c757d' } },
                        y: { ticks: { color: '#6c757d' } }
                    }
                },
                plugins: [ChartDataLabels]
            });

            // Chart: Top Clientes
            new Chart(document.getElementById('topClientsChart'), {
                type: 'bar',
                data: {
                    labels: ['Cliente 1', 'Cliente 2', 'Cliente 3', 'Cliente 4', 'Cliente 5'],
                    datasets: [{
                        label: 'Volumen de Compra',
                        data: [500, 450, 420, 400, 390],
                        backgroundColor: '#ffc107'
                    }]
                },
                options: {
                    plugins: {
                        datalabels: { anchor: 'end', align: 'top' },
                        legend: { display: false }
                    },
                    scales: {
                        x: { ticks: { color: '#6c757d' } },
                        y: { ticks: { color: '#6c757d' } }
                    }
                },
                plugins: [ChartDataLabels]
            });

            // Tabla
            $('#tabla').DataTable({
                responsive: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.1/i18n/es-ES.json'
                }
            });
        });
    </script>
}
