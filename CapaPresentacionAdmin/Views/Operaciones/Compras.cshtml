
@{
    ViewBag.Title = "Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Resumen</a></li>
    <li class="breadcrumb-item active">Registro de Compra</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-shopping-cart"></i> Registro de Compra
    </div>
    <div class="card-body">
        <form id="formRegistroCompra">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label">Proveedor</label>
                    <div class="input-group">
                        <select id="cboProveedor" class="form-select">
                        </select>
                        <input type="text" class="form-control" id="txtBuscarProveedor" placeholder="Buscar proveedor..." />                
                        <button type="button" class="btn btn-outline-secondary" id="btnBuscarProveedor">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-sm-6">
                    <label class="form-label">Tipo de Pago</label>
                    <select id="cboTP" class="form-select">
                    </select>
                </div>
            </div>
            <hr />
            <div class="row mb-3">
                <div class="col-sm-6">
                    <label class="form-label">Producto</label>
                    <div class="input-group">
                        <select id="cboProducto" class="form-select">
                        </select>
                        <input type="text" class="form-control" id="txtBuscarProducto" placeholder="Buscar producto..." />                       
                        <button type="button" class="btn btn-outline-secondary" id="btnBuscarProducto">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-3">
                    <label for="txtCantidad" class="form-label">Cantidad</label>
                    <input type="number" class="form-control" id="txtCantidad" value="1" min="1" required>
                </div>
                <div class="col-md-3">
                    <label for="txtPrecioCompra" class="form-label">Precio de Compra</label>
                    <div class="input-group">
                        <span class="input-group-text">Bs./</span>
                        <input type="text" class="form-control" id="txtPrecioCompra" value="0.00" required>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="button" class="btn btn-success" id="btnAgregarProducto">Agregar Producto</button>
                </div>
            </div>
        </form>

        <hr />

        <div class="row mt-4">
            <div class="col-12">
                <h4>Detalle de la Compra</h4>
                <table id="tablaDetalleCompra" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio de Compra</th>
                            <th>Subtotal</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text">Total: Bs./</span>
                    <input type="text" class="form-control" id="txtTotalCompra" value="0.00" readonly>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <div id="mensajeError" class="alert alert-danger" role="alert" style="display: none;">
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <button type="button" class="btn btn-primary" id="btnRegistrarCompra">Registrar Compra</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Aquí va el código JavaScript
        jQuery.ajax({
            url: '@Url.Action("ListarProductos", "Mantenedor")', 
            type: 'GET',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                $.each(data.data, function (index, valor) {
                    $("<option>").attr("value", valor.id_producto).text(valor.nombre).appendTo("#cboProducto");
                })
            },
            error: function (error) {
                console.log(error);
            }
        });

        //ListarProveedores()
        jQuery.ajax({
            url: '@Url.Action("ListarProveedores", "Mantenedor")',
            type: 'GET',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                $.each(data.data, function (index, valor) {
                    $("<option>").attr("value", valor.id_proveedor).text(valor.nombre).appendTo("#cboProveedor");
                })
            },
            error: function (error) {
                console.log(error);
            }
        });

        //ListarTP()
        jQuery.ajax({
            url: '@Url.Action("ListarTipoPago", "Mantenedor")',
            type: 'GET',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                $.each(data.data, function (index, valor) {
                    $("<option>").attr("value", valor.id_tipo_pago).text(valor.nombre).appendTo("#cboTP");
                })
            },
            error: function (error) {
                console.log(error);
            }
        });
    </script>
}

