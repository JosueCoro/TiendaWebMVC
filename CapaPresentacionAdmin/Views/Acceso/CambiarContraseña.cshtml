@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CambiarContraseña</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <style>
        #loadingOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6); /* Un poco más oscuro para que el texto resalte */
            display: flex;
            flex-direction: column; /* Para apilar el spinner y el texto */
            justify-content: center;
            align-items: center;
            z-index: 9999;
            visibility: hidden;
            opacity: 0;
            transition: visibility 0s, opacity 0.3s linear;
            color: white; 
            font-size: 1.2rem; 
            font-weight: 600; 
        }

            #loadingOverlay.show {
                visibility: visible;
                opacity: 1;
            }

        .spinner-border {
            width: 3rem;
            height: 3rem;
            color: #ffffff;
            margin-bottom: 15px; 
        }

        #loadingMessage {
            margin-top: 10px;
        }

        .form-floating .btn {
            height: calc(1.5em + .75rem + 2px);
            display: flex;
            align-items: center;
        }
    </style>
</head>
<body style="background-color: #2b3c56;">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Cambiar Contraseña</h3></div>
                                <div class="card-body">
                                    <form id="formCambiarContraseña" action="@Url.Action("CambiarContraseña", "Acceso")" method="post" onsubmit="return validarYMostrarCarga()">
                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="correo" type="email" placeholder="Ingrese su correo" required />
                                            <label for="inputEmail">Correo electrónico</label>
                                        </div>

                                        <div class="form-floating mb-3 position-relative">
                                            <input id="actualPassword" class="form-control" name="contraseñaActual" type="password" placeholder="Ingrese su contraseña Actual" required />
                                            <label for="actualPassword">Contraseña Actual</label>
                                            <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y me-2 p-0"
                                                    onclick="togglePassword('actualPassword', 'eyeActual')" style="z-index: 2;">
                                                <i id="eyeActual" class="bi bi-eye" style="font-size: 1.2rem;"></i>
                                            </button>
                                        </div>

                                        <div class="form-floating mb-3 position-relative">
                                            <input id="newPassword" class="form-control" name="nuevaContraseña" type="password" placeholder="Ingrese su contraseña Nueva" required />
                                            <label for="newPassword">Contraseña Nueva</label>
                                            <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y me-2 p-0"
                                                    onclick="togglePassword('newPassword', 'eyeNueva')" style="z-index: 2;">
                                                <i id="eyeNueva" class="bi bi-eye" style="font-size: 1.2rem;"></i>
                                            </button>
                                        </div>

                                        <div class="form-floating mb-3 position-relative">
                                            <input id="confirmPassword" class="form-control" name="confirmarContraseña" type="password" placeholder="Confirmar nueva contraseña" required />
                                            <label for="confirmPassword">Confirmar Nueva Contraseña</label>
                                            <button type="button" class="btn position-absolute top-50 end-0 translate-middle-y me-2 p-0"
                                                    onclick="togglePassword('confirmPassword', 'eyeConfirmar')" style="z-index: 2;">
                                                <i id="eyeConfirmar" class="bi bi-eye" style="font-size: 1.2rem;"></i>
                                            </button>
                                        </div>
                                        <div id="errorPassword" style="display: none;" class="alert alert-danger">
                                            Las contraseñas no coinciden.
                                        </div>

                                        @if (ViewBag.Mensaje != null)
                                        {
                                            <div class="alert alert-danger">
                                                @ViewBag.Mensaje
                                            </div>
                                        }

                                        @if (ViewBag.MensajeExito != null)
                                        {
                                            <div class="alert alert-success">
                                                @ViewBag.MensajeExito
                                            </div>
                                        }

                                        <div class="mt-4 mb-0">
                                            <div class="d-grid"><button type="submit" class="btn btn-primary btn-block">Cambiar Contraseña</button></div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="@Url.Action("Index", "Home")">Volver a Inicio</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; @DateTime.Now.Year Autopartes Dos Hermanos</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <div id="loadingOverlay">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <div id="loadingMessage"></div> 
    </div>

    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script>
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            const isPassword = input.type === "password";

            input.type = isPassword ? "text" : "password";
            icon.className = isPassword ? "bi bi-eye-slash" : "bi bi-eye";
        }

        function validarYMostrarCarga() {
            const isValid = validarContraseñas();

            if (isValid) {
                const loadingOverlay = document.getElementById('loadingOverlay');
                const loadingMessage = document.getElementById('loadingMessage');

                loadingMessage.textContent = "Actualizando su contraseña..."; 
                loadingOverlay.classList.add('show');
                return true; 
            } else {
                return false; 
            }
        }

        function validarContraseñas() {
            const nueva = document.getElementById("newPassword").value;
            const confirmar = document.getElementById("confirmPassword").value;
            const errorDiv = document.getElementById("errorPassword");

            console.log("Validando contraseñas...");

            if (nueva !== confirmar) {
                errorDiv.style.display = "block";
                return false;
            }

            errorDiv.style.display = "none";
            return true;
        }

        document.addEventListener('DOMContentLoaded', function () {
            const loadingOverlay = document.getElementById('loadingOverlay');
            const loadingMessage = document.getElementById('loadingMessage');
            const errorServerDiv = document.querySelector('.alert-danger');
            const successServerDiv = document.querySelector('.alert-success');

            if (errorServerDiv || successServerDiv) {
                loadingOverlay.classList.remove('show');
            }

            
        });
    </script>

</body>
</html>