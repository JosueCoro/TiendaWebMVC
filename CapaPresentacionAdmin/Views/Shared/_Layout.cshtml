@{
    var controlador = ViewContext.RouteData.Values["controller"]?.ToString();
    var esAdministracion = controlador == "Home" &&
        (ViewContext.RouteData.Values["action"]?.ToString() == "Usuarios" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "Roles" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "RolesPorPermisos" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "Permisos");


    var esMantenedor = controlador == "Mantenedor" &&
        (ViewContext.RouteData.Values["action"]?.ToString() == "Categorias" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "Marcas" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "productos" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "UnidadMedida" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "Servicios" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "TipoPago" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "Tiendas");

    var esOperaciones = controlador == "Operaciones" &&
        (ViewContext.RouteData.Values["action"]?.ToString() == "Ventas" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "Compras" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "Clientes" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "Proveedores" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "Stock" );

    var esReporte = controlador == "Operaciones" &&
        (ViewContext.RouteData.Values["action"]?.ToString() == "ReporteVentas" ||
         ViewContext.RouteData.Values["action"]?.ToString() == "ReporteCompras");
}

