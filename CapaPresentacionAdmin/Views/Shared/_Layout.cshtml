    </nav>


    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="d-flex justify-content-center my-3">
                            <a href="@Url.Action("Index", "Home")">
                                <img src="@Url.Content("~/Content/imagenes/Logo_Dashboard.png")" alt="Autopartes Dos Hermanos Logo" style="height: 80px;" />
                            </a>
                        </div>

                        <div class="sb-sidenav-menu-heading">Resumen</div>
                        <a class="nav-link" href=@Url.Action("Index","Home")>
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>

                        <div class="sb-sidenav-menu-heading">Administración</div>

                        <a class="nav-link @(esAdministracion ? "" : "collapsed")" href="#" data-bs-toggle="collapse" data-bs-target="#collapseAdministracion" aria-expanded="@(esAdministracion.ToString().ToLower())" aria-controls="collapseAdministracion">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-cog"></i></div>
                            Administración
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse @(esAdministracion ? "show" : "")" id="collapseAdministracion" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">

                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Usuarios" ? "active" : "")" href="@Url.Action("Usuarios","Home")">
                                    <i class="fas fa-users me-2"></i>Usuarios
                                </a>

                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Roles" ? "active" : "")" href="@Url.Action("Roles","Home")">
                                    <i class="fas fa-user-tag me-2"></i>Roles

                                </a>

                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Permisos" ? "active" : "")" href="@Url.Action("Permisos","Home")">
                                    <i class="fas fa-solid fa-user-lock me-2"></i>Registro de Permisos
                                </a>

                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "RolesPorPermisos" ? "active" : "")" href="@Url.Action("RolesPorPermisos","Home")">
                                    <i class="fas fa-shield-alt me-2"></i>Permisos
                                </a>

                            </nav>
                        </div>



                        <div class="sb-sidenav-menu-heading">MANTENEDOR</div>

                        <a class="nav-link @(esMantenedor ? "" : "collapsed")" href="#" data-bs-toggle="collapse" data-bs-target="#collapseMantenedor" aria-expanded="@(esMantenedor.ToString().ToLower())" aria-controls="collapseMantenedor">
                            <div class="sb-nav-link-icon"><i class="fas fa-columns"></i></div>
                            Mantenimiento
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse @(esMantenedor ? "show" : "")" id="collapseMantenedor" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                

                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Categorias" ? "active" : "")" href="@Url.Action("Categorias","Mantenedor")">
                                    <i class="fas fa-table me-2"></i>Categorías
                                </a>
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Marcas" ? "active" : "")" href="@Url.Action("Marcas","Mantenedor")">
                                    <i class="fas fa-bookmark me-2"></i>Marcas
                                </a>

                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "productos" ? "active" : "")" href="@Url.Action("productos","Mantenedor")">
                                    <i class="fas fa-boxes me-2"></i>Productos
                                </a>
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "UnidadMedida" ? "active" : "")" href="@Url.Action("UnidadMedida","Mantenedor")">
                                    <i class="fas fa-chart-bar me-2"></i>Unidad de Medida
                                </a>
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Servicios" ? "active" : "")" href="@Url.Action("Servicios","Mantenedor")">
                                    <i class="fas fa-thumbtack me-2"></i>Servicios
                                </a>
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "TipoPago" ? "active" : "")" href="@Url.Action("TipoPago","Mantenedor")">
                                    <i class="fas fa-coins me-2"></i>Tipo de Pago
                                </a>
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Tiendas" ? "active" : "")" href="@Url.Action("Tiendas","Mantenedor")">
                                    <i class="fas fa-store me-2"></i>Tiendas
                                </a>

                            </nav>
                        </div>


                        <div class="sb-sidenav-menu-heading">OPERACIONES</div>


                        <a class="nav-link @(esOperaciones ? "" : "collapsed")" href="#" data-bs-toggle="collapse" data-bs-target="#collapseOperaciones" aria-expanded="@(esOperaciones.ToString().ToLower())" aria-controls="collapseOperaciones">
                            <div class="sb-nav-link-icon"><i class="fas fa-cogs"></i></div>
                            Operaciones
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse @(esOperaciones ? "show" : "")" id="collapseOperaciones" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Ventas" ? "active" : "")" href="@Url.Action("Ventas","Operaciones")">
                                    <i class="fas fa-shopping-bag me-2"></i>Ventas
                                </a>
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Compras" ? "active" : "")" href="@Url.Action("Compras","Operaciones")">
                                    <i class="fas fa-shopping-cart me-2"></i>Compras
                                </a>
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Clientes" ? "active" : "")" href="@Url.Action("Clientes","Operaciones")">
                                    <i class="fas fa-users me-2"></i>Clientes
                                </a>
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Proveedores" ? "active" : "")" href="@Url.Action("Proveedores","Operaciones")">
                                    <i class="fas fa-truck me-2"></i>Proveedores
                                </a>
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Stock" ? "active" : "")" href="@Url.Action("Stock","Operaciones")">
                                    <i class="fas fa-boxes me-2"></i>Stock / Inventario
                                </a>

                            </nav>
                        </div>



                        <div class="sb-sidenav-menu-heading">REPORTES</div>

                        <a class="nav-link @(esReporte ? "" : "collapsed")" href="#" data-bs-toggle="collapse" data-bs-target="#collapseReportes" aria-expanded="@(esReporte.ToString().ToLower())" aria-controls="collapseReportes">
                            <div class="sb-nav-link-icon"><i class="fas fa-chart-line"></i></div>
                            Reportes
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse @(esReporte ? "show" : "")" id="collapseReportes" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">

                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ReporteVentas" ? "active" : "")" href="@Url.Action("ReporteVentas","Operaciones")">
                                    <i class="fas fa-file-invoice-dollar me-2"></i>Reporte de Ventas
                                </a>
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ReporteCompras" ? "active" : "")" href="@Url.Action("ReporteCompras","Operaciones")">
                                    <i class="fas fa-receipt me-2"></i>Reporte de Compras
                                </a>

                            </nav>
                        </div>


                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">AutoGestión Web v1.0</div>
                    <a href="https://n9.cl/autopartessoporte" class="text-muted" style="text-decoration: none;">soporte@autopartes.com</a>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()

                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; @DateTime.Now.Year Autopartes Dos Hermanos</div>
                        <div>
                            <a href="@Url.Action("PrivacyPolicy", "Home")">Política de Privacidad</a>
                            &middot;
                            <a href="@Url.Action("TermsAndConditions", "Home")">Términos y Condiciones</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>


