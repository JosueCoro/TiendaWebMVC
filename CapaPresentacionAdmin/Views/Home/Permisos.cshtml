@{
    ViewBag.Title = "Permisos";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate de que tu layout base sea correcto
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Resumen</a></li>
    <li class="breadcrumb-item active">Permisos</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-key"></i> Lista de Permisos
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModalPermiso(null)">Crear Nuevo Permiso</button>
            </div>
        </div>

        <hr />

        <table id="tablaPermisos" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Estado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>


<div class="modal fade" id="FormModalPermiso" tabindex="-1" aria-labelledby="modalPermisoLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="modalPermisoLabel">Detalle de Permiso</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtIdPermiso" type="text" value="0" />

                <div class="row g-1">
                    <div class="col-sm-12">
                        <label for="txtNombrePermiso" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="txtNombrePermiso" placeholder="Nombre del Permiso" autocomplete="off">
                    </div>

                    <div class="col-sm-12">
                        <label for="txtDescripcionPermiso" class="form-label">Descripción</label>
                        <input type="text" class="form-control" id="txtDescripcionPermiso" placeholder="Descripción del Permiso" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="ddlEstadoPermiso" class="form-label">Estado</label>
                        <select class="form-select" id="ddlEstadoPermiso">
                            <option value="1">Activo</option>
                            <option value="0">Inactivo</option>
                        </select>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeErrorPermiso" class="alert alert-danger" role="alert" style="display:none;">
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" onclick="GuardarPermiso()">Guardar</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        var tabladataPermisos;
        var filaSeleccionadaPermiso;

        $(document).ready(function () {
            tabladataPermisos = $('#tablaPermisos').DataTable({
                responsive: true,
                ordering: false,
                "ajax": {
                    "url": '@Url.Action("ListarPermisos", "Home")',
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "nombre" },
                    { "data": "descripcion" },
                    {
                        "data": "estado",
                        "render": function (valor) {
                            if (valor) {
                                return '<span class="badge bg-success">Activo</span>';
                            } else {
                                return '<span class="badge bg-danger">Inactivo</span>';
                            }
                        }
                    },
                    {
                        "defaultContent": '<button type="button" class="btn btn-warning btn-sm btn-editar-permiso me-1">Editar</button>' +
                                          '<button type="button" class="btn btn-danger btn-sm btn-eliminar-permiso">Eliminar</button>',
                        "orderable": false,
                        "searchable": false,
                        "width": "180px"
                    }
                ],
                "language": {
                    "url": '//cdn.datatables.net/plug-ins/2.2.1/i18n/es-ES.json',
                },
            });
        });

        function abrirModalPermiso(json) {
            $("#txtIdPermiso").val(0);
            $("#txtNombrePermiso").val("");
            $("#txtDescripcionPermiso").val("");
            $("#ddlEstadoPermiso").val(1);

            $("#mensajeErrorPermiso").hide();

            if (json != null) {
                $("#txtIdPermiso").val(json.id_permiso);
                $("#txtNombrePermiso").val(json.nombre);
                $("#txtDescripcionPermiso").val(json.descripcion);
                $("#ddlEstadoPermiso").val(json.estado == true ? 1 : 0);
            }

            $('#FormModalPermiso').modal('show');
        }

        $("#tablaPermisos tbody").on("click", '.btn-editar-permiso', function () {
            filaSeleccionadaPermiso = $(this).closest("tr");

            var data = tabladataPermisos.row(filaSeleccionadaPermiso).data();
            console.log(data)

            abrirModalPermiso(data);
        });

        $("#tablaPermisos tbody").on("click", '.btn-eliminar-permiso', function () {

            var permisoAEliminar = $(this).closest("tr");

            var data = tabladataPermisos.row(permisoAEliminar).data();

            swal({
                title: "¿Estás seguro?",
                text: "¿Desea eliminar el Permiso: " + data.nombre + "?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Si, Eliminar",
                cancelButtonText: "No, Cancelar",
                closeOnConfirm: true,
            },
            function ()
            {
                $.ajax({
                    url: '@Url.Action("EliminarPermiso", "Home")',
                    type: 'POST',
                    data: JSON.stringify({ id: data.id_permiso }),
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {

                        if (data.resultado) {
                            ActualizarTablaPermisos();
                            tabladata.row(permisoAEliminar).remove().draw();
                        } else {
                            swal("No se pudo eliminar", data.mensaje, "error");
                        }
                    },
                    error: function (error) {
                        console.log(error)
                    }
                });

            });

            console.log(data);

        });

        function GuardarPermiso() {
            var oPermiso = {
                id_permiso: $("#txtIdPermiso").val(),
                nombre: $("#txtNombrePermiso").val(),
                descripcion: $("#txtDescripcionPermiso").val(),
                estado: $("#ddlEstadoPermiso").val() == 1 ? true : false,
            };


            

            jQuery.ajax({
                url: '@Url.Action("GuardarPermiso", "Home")', 
                type: 'POST',
                data: JSON.stringify({ objeto: oPermiso }), 
                datatype: 'json',
                contentType: 'application/json; charset=utf-8',
                success: function (data) {

                    if (data.resultado != 0) { 
                        $('#FormModalPermiso').modal("hide");
                        swal("¡Guardado!", data.mensaje, "success"); 

                        if (oPermiso.id_permiso == 0) { 
                            oPermiso.id_permiso = data.resultado;
                            tabladataPermisos.row.add(oPermiso).draw(false); 
                        } else { 
                            tabladataPermisos.row(filaSeleccionadaPermiso).data(oPermiso).draw(false); 
                            filaSeleccionadaPermiso = null; 
                        }
                        ActualizarTablaPermisos(); 
                    } else {
                        $("#mensajeErrorPermiso").text(data.mensaje);
                        $("#mensajeErrorPermiso").show();
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error AJAX al guardar:", status, error);
                    $('#mensajeErrorPermiso').text("Ocurrió un error inesperado al guardar el permiso.");
                    $('#mensajeErrorPermiso').show();
                }
            });
        }

        function ActualizarTablaPermisos() {
            tabladataPermisos.ajax.reload(null, false);
        }
    </script>
}