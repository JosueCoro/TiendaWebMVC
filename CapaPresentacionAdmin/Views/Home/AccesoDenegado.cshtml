
@{
    ViewBag.Title = "Acceso Denegado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">¡Acceso Denegado!</h4>
                <p>No tienes los permisos necesarios para acceder a esta sección.</p>
                <hr>
                <p class="mb-0">Por favor, contacta al administrador del sistema si crees que esto es un error.</p>
            </div>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Ir al Dashboard</a>
            <a href="@Url.Action("CerrarSesion", "Acceso")" class="btn btn-secondary mt-3">Cerrar Sesión</a>
        </div>
    </div>
</div>
